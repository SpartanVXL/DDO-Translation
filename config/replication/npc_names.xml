<replication>
  <message_set name="npc name">
    <match>^ui\\00_message\\npc\\npc_name$</match>
    <match>^ui\\00_message\\enemy\\enemy_name$</match>
    <rewrite>
      <original_match>^(.+)兵士$</original_match>
      <translation_replace>{0} Soldier</translation_replace>
      <translation_arg message_set="location name" required="true" />
    </rewrite>
    <extra>
      <original>兵士</original>
      <translation>Soldier</translation>
      <translation_format proper="false">soldier</translation_format>
    </extra>
    <extra>
      <original>傷ついた覚者</original>
      <translation>wounded Arisen</translation>
      <translation_format proper="false" />
    </extra>
    <extra>
      <original>エリアマスター</original>
      <translation>Area Master</translation>
      <translation_format proper="false" />
    </extra>
    <extra>
      <original>メイロワ将軍</original>
      <translation>General Meirova</translation>
    </extra>
    <extra>
      <original>ネド王子</original>
      <translation>Prince Nedo</translation>
    </extra>
  </message_set>
</replication>